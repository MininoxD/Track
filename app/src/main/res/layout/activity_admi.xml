<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/administrador" />

            <EditText
                android:id="@+id/txtDNIR"
                android:layout_width="300dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="N° USUARIO"
                android:layout_marginTop="20dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtNR"
                android:layout_width="300dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Nombre de la Tienda"
                />

            <EditText
                android:id="@+id/txtCEL"
                android:layout_width="300dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="20dp"
                android:hint="N° Celular"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtDIRE"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:layout_marginTop="20dp"
                android:hint="Direccion de la tienda"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/txtREF"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:layout_marginTop="20dp"
                android:hint="Referencia como llegar"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/txtDESCR"
                android:layout_width="300dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Descripcion de la Tienda"
                />

            <Button
                android:id="@+id/btnREGIS"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"
                android:background="#5CA33B"
                android:onClick="registrar"
                android:text="REGISTRAR"
                android:textColor="#e4e0e1" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>